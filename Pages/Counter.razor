@page "/counter"

<PageTitle>Counter - Coloress</PageTitle>

<div class="page-header">
    <h1>Counter Example ðŸ”¢</h1>
    <p>This demonstrates component state management and event handling</p>
</div>

<div class="counter-container">
    <div class="counter-display">
        <div class="counter-label">Current count</div>
        <div class="counter-value">@currentCount</div>
    </div>
    
    <div class="counter-controls">
        <button class="btn btn-primary" @onclick="IncrementCount">
            <span class="btn-icon">âž•</span> Increment
        </button>
        <button class="btn btn-secondary" @onclick="DecrementCount">
            <span class="btn-icon">âž–</span> Decrement
        </button>
        <button class="btn btn-danger" @onclick="ResetCount">
            <span class="btn-icon">ðŸ”„</span> Reset
        </button>
    </div>
    
    @if (currentCount > 0)
    {
        <div class="counter-message success">
            Great! You've clicked @currentCount time@(currentCount == 1 ? "" : "s")!
        </div>
    }
    else if (currentCount < 0)
    {
        <div class="counter-message warning">
            Going negative! Current value: @currentCount
        </div>
    }
</div>

<div class="info-box">
    <h3>ðŸ’¡ What's happening here?</h3>
    <ul>
        <li><code>@("@")page "/counter"</code> - Defines the route for this component</li>
        <li><code>@("@")onclick</code> - Binds click events to C# methods</li>
        <li><code>@("@")code</code> - Contains the C# logic for this component</li>
        <li>State changes automatically trigger UI updates</li>
    </ul>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    
    private void DecrementCount()
    {
        currentCount--;
    }
    
    private void ResetCount()
    {
        currentCount = 0;
    }
}
