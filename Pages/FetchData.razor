                    <th>Temp. (F)</th>
                    <th>Summary</th>
                    <th>Condition</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var forecast in forecasts)
                {
                    <tr>
                        <td>@forecast.Date.ToShortDateString()</td>
                        <td class="temp-value">@forecast.TemperatureCÂ°</td>
                        <td class="temp-value">@forecast.TemperatureFÂ°</td>
                        <td><span class="summary-badge">@forecast.Summary</span></td>
                        <td class="condition-icon">@GetWeatherIcon(forecast.Summary)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-label">Average Temp</div>
            <div class="stat-value">@($"{forecasts.Average(f => f.TemperatureC):F1}Â°C")</div>
